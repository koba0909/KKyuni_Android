<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Music" />

    <style name="Music.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/all_gmarketsans_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Music.PlayTime">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/numbser_blackopsone_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Music.ReleaseDate">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/numbser_blackopsone_regular</item>
        <item name="android:textColor">@color/white_alpha70</item>
    </style>

    <style name="PlayList" />

    <style name="PlayList.ToolbarTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/numbser_blackopsone_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayList.Empty">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/all_gmarketsans_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayList.AddMusic">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/all_gmarketsans_medium</item>
        <item name="android:textColor">@color/green_ddf880</item>
    </style>

    <style name="ChoiceDateUnSelected">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/numbser_blackopsone_regular</item>
        <item name="android:textColor">@color/white_alpha50</item>
    </style>

    <style name="ChoiceDateSelected">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/numbser_blackopsone_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
